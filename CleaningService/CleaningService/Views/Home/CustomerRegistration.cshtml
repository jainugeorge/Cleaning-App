@model CleaningService.Models.Customer

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <title>Pajns Cleaning and Ironing Services</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta name="keywords" content="Clean Login Form Responsive, Login Form Web Template, Flat Pricing Tables, Flat Drop-Downs, Sign-Up Web Templates, Flat Web Templates, Login Sign-up Responsive Web Template, Smartphone Compatible Web Template, Free Web Designs for Nokia, Samsung, LG, Sony Ericsson, Motorola Web Design" />

    <!-- css files -->
    <link href="~/Contents/LoginTemplate/css/font-awesome.min.css" rel="stylesheet" type="text/css" media="all">
    <link href="~/Contents/LoginTemplate/css/style.css" rel="stylesheet" type="text/css" media="all" />
    <!-- /css files -->
    <!-- online fonts -->
    <link href="//fonts.googleapis.com/css?family=Sirin+Stencil" rel="stylesheet">
    <!-- online fonts -->
</head>
<body>
    @{if(TempData["msg"]!=null)
      {
          <script>alert('@TempData["msg"]')</script>
      }
    }

    <div class="container demo-1">
        <div class="content">
            <div id="large-header" class="large-header">
                <h1>Pajns Registration Form</h1>
                <div class="main-agileits">
                    <!--form-stars-here-->
                    <div class="form-w3-agile">
                        <h2>Register Now</h2>
                        <form action="../Home/CustomerRegistration" method="post">
                            <div class="form-sub-w3">
                                @Html.TextBoxFor(model => model.Name, new { type = "text", placeholder = "Name", required = "required" })
                                 @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })

                                <div class="icon-w3">
                                    <i class="fa fa-user" aria-hidden="true"></i>
                                </div>
                            </div>
                            <div class="form-sub-w3">
                                @Html.TextBoxFor(model => model.Email, new { type = "text", placeholder = "Email", required = "required" })
                                @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })


                                <div class="icon-w3">
                                    <i class="fa fa-address-card" aria-hidden="true"></i>
                                </div>
                            </div>
                            <div class="form-sub-w3">
                                @Html.TextBoxFor(model => model.Password, new { type = "password", placeholder = "Password", required = "required" })
                                @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })


                                <div class="icon-w3">
                                    <i class="fa fa-address-card" aria-hidden="true"></i>
                                </div>
                            </div>
                            <div class="form-sub-w3">
                                @Html.TextBoxFor(model => model.ConfirmPassword, new { type = "password", placeholder = "ConfirmPassword", required = "required" })
                                @Html.ValidationMessageFor(model => model.ConfirmPassword, "", new { @class = "text-danger" })


                                <div class="icon-w3">
                                    <i class="fa fa-address-card" aria-hidden="true"></i>
                                </div>
                            </div>
                            
                            <div class="form-sub-w3">
                                @Html.TextBoxFor(model => model.City, new { type = "text", placeholder = "City", required = "required" })
                                @Html.ValidationMessageFor(model => model.City, "", new { @class = "text-danger" })


                                <div class="icon-w3">
                                    <i class="fa fa-address-card" aria-hidden="true"></i>
                                </div>
                            </div>
                            <div class="form-sub-w3">
                                @Html.TextBoxFor(model => model.Suburb, new { type = "text", placeholder = "Suburb", required = "required" })
                                @Html.ValidationMessageFor(model => model.Suburb, "", new { @class = "text-danger" })


                                <div class="icon-w3">
                                    <i class="fa fa-address-card" aria-hidden="true"></i>
                                </div>
                            </div>
                            <div class="form-sub-w3">
                                @Html.TextBoxFor(model => model.Street, new { type = "text", placeholder = "Street", required = "required" })
                                @Html.ValidationMessageFor(model => model.Street, "", new { @class = "text-danger" })


                                <div class="icon-w3">
                                    <i class="fa fa-address-card" aria-hidden="true"></i>
                                </div>
                            </div>
                            <div class="form-sub-w3">
                                @Html.TextBoxFor(model => model.PhoneNumber, new { type = "text", placeholder = "PhoneNumber", required = "required" })
                                @Html.ValidationMessageFor(model => model.PhoneNumber, "", new { @class = "text-danger" })


                                <div class="icon-w3">
                                    <i class="fa fa-address-card" aria-hidden="true"></i>
                                </div>
                            </div>


                            @*<p class="p-bottom-w3ls1">New User?<a class="" href="#">  Register here</a></p>*@
                            <div class="clear"></div>
                            <a class="" style="color:silver" href="../Home/Index">Back To Home</a>

                            <div class="submit-w3l">
                                <input type="submit" value="Register">
                            </div>
                        </form>
                        <div class="social w3layouts">
                            <div class="heading">

                                <div class="clear"></div>
                            </div>

                            <div class="clear"></div>
                        </div>
                    </div>
                    <!--//form-ends-here-->
                    <!--//form-ends-here-->
                </div><!-- copyright -->
             

                <div class="copyright w3-agile">
                    <p> © 2018 Cleaning Service Login Form </p>
                </div>
                <!-- //copyright -->
            </div>
        </div>
    </div>
</body>
</html>
